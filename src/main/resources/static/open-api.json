{
  "openapi": "3.1.0",
  "info": {
    "title": "Mortgage API",
    "description": "API for interest rate API and Mortgage check API",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:8086",
      "description": "Generated server url"
    }
  ],
  "paths": {
    "/api/mortgage-check": {
      "post": {
        "tags": [
          "mortgage-check-controller"
        ],
        "operationId": "check",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MortgageCheckRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/MortgageCheckResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/interest-rate": {
      "get": {
        "tags": [
          "interest-rate-controller"
        ],
        "operationId": "getRates",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MortgageRate"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MortgageCheckRequest": {
        "type": "object",
        "properties": {
          "income": {
            "type": "number"
          },
          "maturityPeriod": {
            "type": "integer",
            "format": "int32"
          },
          "homeValue": {
            "type": "number"
          },
          "loanValue": {
            "type": "number"
          }
        },
        "required": [
          "homeValue",
          "loanValue",
          "maturityPeriod"
        ]
      },
      "MortgageCheckResponse": {
        "type": "object",
        "properties": {
          "mortgageRate": {
            "type": "number"
          },
          "mortgage": {
            "type": "boolean"
          }
        }
      },
      "MortgageRate": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "interestRate": {
            "type": "number"
          },
          "maturityPeriod": {
            "type": "integer",
            "format": "int32"
          },
          "lastUpdated": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}